<mvc:View
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">
		<semantic:titleHeading
			class='sapUiMarginSmall'>
			<HBox
				alignItems="Center"
			>
				<Button
				tooltip="{i18n>ttlNavBack}"
				press="onNavBack"
				icon="{i18n>iBack}"
				type="Emphasized"/>
				<Title class='sapUiSmallMarginBegin' text="{MaterialText}"/>
			</HBox>
		</semantic:titleHeading>
		<semantic:titleCustomTextActions>
			<Button tooltip='{i18>ttlEdit}' 
				text='{i18n>ttlEdit}' 
				icon='{i18n>iEdit}'
				type='Emphasized'
				visible="{= !${objectView>/editMode}}"
				press="onPressEditMaterial"/>
			<Button tooltip='{i18>ttlCancel}' 
				text='{i18n>ttlCancel}' 
				icon='{i18n>iCancel}'
				visible='{objectView>/editMode}'
				press="onPressCancelEditMaterial"/>
			<Button tooltip='{i18>ttlSave}' 
				text='{i18n>ttlSave}' 
				icon='{i18n>iSave}'
				visible='{objectView>/editMode}'
				press="onPressSaveEditMaterial"/>
		</semantic:titleCustomTextActions>
		<semantic:content>
		<VBox>
			<Label
				text="{i18n>lMaterialDescription}"/>
			<Text
				visible="{= !${objectView>/editMode}}"
			text="{MaterialDescription}"/>
			<Input
				visible="{objectView>/editMode}"
				width="10em"
				value="{MaterialDescription}"
				maxLength="256"/>
			<Label
				text="{i18n>lMaterialText}"/>
			<Text
				visible="{= !${objectView>/editMode}}"
				text="{MaterialText}"/>
			<Input
				visible="{objectView>/editMode}"
				width="10em"
				value="{MaterialText}"
				maxLength="128"/>
		</VBox>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>